{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "strict": false,
        "outDir": "../lib",
        "sourceMap": true,
        "target": "ES2023",
        "typeRoots": [ "./src/ts/types", "./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "../src/ts"
    ],
    "exclude": [
        "../node_modules",
        "../**/*.spec.ts"
    ],
    "typedocOptions": {
        "out": "../dist/doc",
        "exclude": [
            "**/*.spec.ts"
        ],
        "entryPoints": ["../src/ts/flatgeobuf.ts"],
        "readme": "none"
    }
}
